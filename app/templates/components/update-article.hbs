{{#if updateArticle}}
<h1>Update Article</h1>
  <div>
  <form>
   <div class="form-group">
     <label for="title">Title</label>
     {{input value=title id="title" placeholder=article.title}}
   </div>

   <div class="form-group">
     <label for="type">Author</label>
     {{input value=author id="author" placeholder=article.author}}
   </div>

   <div class="form-group">
     <label for="image">Image URL</label>
     {{input value=image id="image" placeholder=article.image}}
   </div>

   <div class="form-group">
     <label for="tag">Tag</label>
     {{input value=tag id="tag" placeholder=article.tag}}
   </div>

   <div class="form-group">
     <label for="text">Text</label>
     {{textarea value=text id="text" placeholder=article.text}}
   </div>

   <button {{action 'update' article}}>Save</button>
  </form>
  </div>
 {{else}}
    <button {{action 'updateArticle'}}>Update Article</button>
{{/if}}
