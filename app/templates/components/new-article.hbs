{{#if addNewArticle}}
<h1>New Article</h1>
  <div>
  <form>
   <div class="form-group">
     <label for="title">Title</label>
     {{input value=title id="title"}}
   </div>

   <div class="form-group">
     <label for="type">Author</label>
     {{input value=author id="author"}}
   </div>

   <div class="form-group">
     <label for="image">Image URL</label>
     {{input value=image id="image"}}
   </div>

   <div class="form-group">
     <label for="tag">Tag</label>
     {{input value=tag id="tag"}}
   </div>

   <div class="form-group">
     <label for="text">Text</label>
     {{textarea value=text id="text"}}
   </div>

   <button {{action 'save'}}>Save</button>
  </form>
  </div>
 {{else}}
    <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
